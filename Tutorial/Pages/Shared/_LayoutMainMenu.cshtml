@{
    Layout = "_LayoutBase";
}

@section Head
{
    <title> @ViewData["Title"]</title>
}

@section Header
{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Tutorial</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/MainMenu/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clicker/Index">Clicker</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
}

@section Footer
{
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Great@*<a asp-area="" asp-page="/Privacy">Privacy</a></div>*@
        </div>
    </footer>
}

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
}
